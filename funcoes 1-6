// 1
function exibirMensagem() {
  console.log("olá mundo!!!");
}

// 2
function exibirNome(nome) {
  console.log(`O meu nome é ${nome}`);
}

// 3
function exibirInfo(nome, idade, estiloMusical) {
  console.log(`Meu nome é ${nome}, tenho ${idade} anos de idade e gosto de ${estiloMusical}.`);
}

// 4
function exibirFavoritos(filme, musica) {
  console.log(`Meu filme favorito é ${filme} e minha música favorita é ${musica}.`);
}

// 5
function triplo(numero) {
  return numero * 3;
}

// 6
function verificarVerdade(valor) {
  if (valor === true) {
    return true;
  }
